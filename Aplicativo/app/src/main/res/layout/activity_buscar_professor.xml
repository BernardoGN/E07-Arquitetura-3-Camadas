<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.BuscarProfessorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFESSOR"
        android:textSize="50dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:id="@+id/lbl_tituloProfessor"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NÃºmero de cadastro"
        android:inputType="number"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_below="@id/lbl_tituloProfessor"
        android:id="@+id/txt_numeroCadastroBuscarProfessor"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_numeroCadastroBuscarProfessor"
        android:id="@+id/btn_buscarProfessor"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:textSize="22dp"
        android:layout_marginTop="22dp"
        android:layout_alignStart="@id/txt_numeroCadastroBuscarProfessor"
        android:layout_alignEnd="@id/txt_numeroCadastroBuscarProfessor"
        android:layout_below="@id/btn_buscarProfessor"
        android:id="@+id/lbl_nomeBuscarProfessor"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Curso:"
        android:textSize="22dp"
        android:layout_marginTop="22dp"
        android:layout_alignStart="@id/txt_numeroCadastroBuscarProfessor"
        android:layout_alignEnd="@id/txt_numeroCadastroBuscarProfessor"
        android:layout_below="@id/lbl_nomeBuscarProfessor"
        android:id="@+id/lbl_cursoBuscarProfessor"
        />

</RelativeLayout>