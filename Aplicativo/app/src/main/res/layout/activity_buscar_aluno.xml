<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.BuscarAlunoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALUNO"
        android:textSize="50dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:id="@+id/lbl_tituloAluno"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Matrícula"
        android:inputType="number"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_below="@id/lbl_tituloAluno"
        android:id="@+id/txt_matriculaBuscarAluno"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_matriculaBuscarAluno"
        android:id="@+id/btn_buscarAluno"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:textSize="22dp"
        android:layout_marginTop="22dp"
        android:layout_alignStart="@id/txt_matriculaBuscarAluno"
        android:layout_alignEnd="@id/txt_matriculaBuscarAluno"
        android:layout_below="@id/btn_buscarAluno"
        android:id="@+id/lbl_nomeBuscarAluno"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Curso:"
        android:textSize="22dp"
        android:layout_marginTop="22dp"
        android:layout_alignStart="@id/txt_matriculaBuscarAluno"
        android:layout_alignEnd="@id/txt_matriculaBuscarAluno"
        android:layout_below="@id/lbl_nomeBuscarAluno"
        android:id="@+id/lbl_cursoBuscarAluno"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço:"
        android:textSize="22dp"
        android:layout_marginTop="22dp"
        android:layout_alignStart="@id/txt_matriculaBuscarAluno"
        android:layout_alignEnd="@id/txt_matriculaBuscarAluno"
        android:layout_below="@id/lbl_cursoBuscarAluno"
        android:id="@+id/lbl_enderecoBuscarAluno"
        />

</RelativeLayout>