<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufmg.coltec.tp.appacademico">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.ProfessorActivity"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.AlunoActivity"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.InserirAlunoActivity"
            android:parentActivityName=".UI.AlunoActivity" />
        <activity
            android:name=".UI.RemoverAlunoActivity"
            android:parentActivityName=".UI.AlunoActivity" />
        <activity
            android:name=".UI.BuscarAlunoActivity"
            android:parentActivityName=".UI.AlunoActivity" />
        <activity
            android:name=".UI.BuscarProfessorActivity"
            android:parentActivityName=".UI.ProfessorActivity"
            />
        <activity
            android:name=".UI.InserirProfessorActivity"
            android:parentActivityName=".UI.ProfessorActivity"
            />
        <activity
            android:name=".UI.RemoverProfessorActivity"
            android:parentActivityName=".UI.ProfessorActivity"
        ></activity>
    </application>

</manifest>